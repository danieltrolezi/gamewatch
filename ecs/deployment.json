{
  "executionRoleArn": "arn:aws:iam::471112560082:role/ecsTaskExecutionRole",
  "family": "laravel-app-task",
  "tags": [
    {
      "key": "namespace",
      "value": "laravel-app"
    }
  ],
  "networkMode": "awsvpc",
  "containerDefinitions": [
    {
      "name": "nginx",
      "image": "471112560082.dkr.ecr.us-east-2.amazonaws.com/codelab92/laravel-app:latest-nginx",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80,
          "protocol": "tcp"
        }
      ],
      
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/laravel-app",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "nginx",
          "awslogs-create-group": "true"
        }
      }
    },
    {
      "name": "php-fpm",
      "image": "471112560082.dkr.ecr.us-east-2.amazonaws.com/codelab92/laravel-app:latest-php-fpm",
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/laravel-app",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "php-fpm",
          "awslogs-create-group": "true"
        }
      },
      "secrets": [
        {
          "name": "APP_NAME",
          "valueFrom": "arn:aws:ssm:us-east-2:471112560082:parameter/laravel-app/APP_DEBUG"
        },
        {
          "name": "APP_VERSION",
          "valueFrom": "arn:aws:ssm:us-east-2:471112560082:parameter/laravel-app/APP_VERSION"
        },
        {
          "name": "APP_URL",
          "valueFrom": "arn:aws:ssm:us-east-2:471112560082:parameter/laravel-app/APP_URL"
        },
        {
          "name": "APP_ENV",
          "valueFrom": "arn:aws:ssm:us-east-2:471112560082:parameter/laravel-app/APP_ENV"
        },
        {
          "name": "APP_KEY",
          "valueFrom": "arn:aws:ssm:us-east-2:471112560082:parameter/laravel-app/APP_KEY"
        },
        {
          "name": "APP_DEBUG",
          "valueFrom": "arn:aws:ssm:us-east-2:471112560082:parameter/laravel-app/APP_DEBUG"
        },
        {
          "name": "DB_CONNECTION",
          "valueFrom": "arn:aws:ssm:us-east-2:471112560082:parameter/laravel-app/DB_CONNECTION"
        },
        {
          "name": "DB_HOST",
          "valueFrom": "arn:aws:ssm:us-east-2:471112560082:parameter/laravel-app/DB_HOST"
        },
        {
          "name": "DB_PORT",
          "valueFrom": "arn:aws:ssm:us-east-2:471112560082:parameter/laravel-app/DB_PORT"
        },
        {
          "name": "DB_DATABASE",
          "valueFrom": "arn:aws:ssm:us-east-2:471112560082:parameter/laravel-app/DB_DATABASE"
        },
        {
          "name": "DB_USERNAME",
          "valueFrom": "arn:aws:ssm:us-east-2:471112560082:parameter/laravel-app/DB_USERNAME"
        },
        {
          "name": "DB_PASSWORD",
          "valueFrom": "arn:aws:ssm:us-east-2:471112560082:parameter/laravel-app/DB_PASSWORD"
        },
        {
          "name": "REDIS_HOST",
          "valueFrom": "arn:aws:ssm:us-east-2:471112560082:parameter/laravel-app/REDIS_HOST"
        },
        {
          "name": "REDIS_PASSWORD",
          "valueFrom": "arn:aws:ssm:us-east-2:471112560082:parameter/laravel-app/REDIS_PASSWORD"
        }
      ]
    }
  ],
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "256",
  "memory": "512"
}